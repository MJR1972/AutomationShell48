<UserControl x:Class="AutomationShell48.UI.Features.About.AboutPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock Text="About" Style="{StaticResource H1TextStyle}" />
            <TextBlock Margin="0,6,0,18"
                       Style="{StaticResource BodyTextStyle}"
                       Text="Shell template details and implementation scope." />

            <Border Style="{StaticResource CardSurfaceStyle}">
                <StackPanel>
                    <TextBlock Text="AutomationShell48" Style="{StaticResource H3TextStyle}" />
                    <TextBlock Margin="0,10,0,0" Text="{Binding AboutText}" Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>

        <Border Background="#66000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="240" Height="10" />
                <TextBlock Margin="0,10,0,0" Text="{Binding BusyMessage}" Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>


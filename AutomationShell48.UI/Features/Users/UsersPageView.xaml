<UserControl x:Class="AutomationShell48.UI.Features.Users.UsersPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page heading -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Users" Style="{StaticResource H1TextStyle}" />
            <TextBlock Margin="0,6,0,0"
                       Text="Example in-memory CRUD workflow for user records."
                       Style="{StaticResource BodyTextStyle}" />
        </StackPanel>

        <!-- Two-column CRUD layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Left: form/edit panel -->
            <Border Grid.Column="0" Style="{StaticResource CardSurfaceStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="18" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="User Details" Style="{StaticResource H3TextStyle}" />

                    <TextBlock Grid.Row="2" Text="User ID" VerticalAlignment="Center" Style="{StaticResource CaptionTextStyle}" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding FormUserIdDisplay}"
                             IsReadOnly="True"
                             Style="{StaticResource ModernTextBoxStyle}" />

                    <TextBlock Grid.Row="4" Text="First Name" VerticalAlignment="Center" Style="{StaticResource CaptionTextStyle}" />
                    <TextBox Grid.Row="4"
                             Grid.Column="1"
                             Text="{Binding FormFirstName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}" />

                    <TextBlock Grid.Row="6" Text="Last Name" VerticalAlignment="Center" Style="{StaticResource CaptionTextStyle}" />
                    <TextBox Grid.Row="6"
                             Grid.Column="1"
                             Text="{Binding FormLastName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}" />

                    <TextBlock Grid.Row="8" Text="Location" VerticalAlignment="Center" Style="{StaticResource CaptionTextStyle}" />
                    <ComboBox Grid.Row="8"
                              Grid.Column="1"
                              ItemsSource="{Binding States}"
                              SelectedItem="{Binding FormLocation, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="10" Text="Email" VerticalAlignment="Center" Style="{StaticResource CaptionTextStyle}" />
                    <TextBox Grid.Row="10"
                             Grid.Column="1"
                             Text="{Binding FormEmail, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}" />

                    <TextBlock Grid.Row="12" Text="Phone Number" VerticalAlignment="Center" Style="{StaticResource CaptionTextStyle}" />
                    <TextBox Grid.Row="12"
                             Grid.Column="1"
                             Text="{Binding FormPhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}" />
                </Grid>
            </Border>

            <!-- Right: list panel -->
            <Border Grid.Column="2" Style="{StaticResource CardSurfaceStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Users List" Style="{StaticResource H3TextStyle}" />

                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding Users}"
                             SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource BorderBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4,2">
                                    <TextBlock Text="{Binding DisplayLabel}" Style="{StaticResource BodyTextStyle}" />
                                    <TextBlock Margin="0,2,0,0"
                                               Text="{Binding Email}"
                                               Style="{StaticResource CaptionTextStyle}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- CRUD action row -->
                    <WrapPanel Grid.Row="4">
                        <Button Content="Add"
                                Width="90"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding AddUserCommand}" />
                        <Button Content="Update"
                                Width="90"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding UpdateUserCommand}" />
                        <Button Content="Delete"
                                Width="90"
                                Style="{StaticResource DangerButtonStyle}"
                                Command="{Binding DeleteUserCommand}" />
                        <Button Content="Clear"
                                Width="90"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding ClearFormCommand}" />
                    </WrapPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Optional busy overlay pattern kept consistent with other pages -->
        <Border Background="#66000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="240" Height="10" />
                <TextBlock Margin="0,10,0,0" Text="{Binding BusyMessage}" Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

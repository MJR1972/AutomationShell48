<Window x:Class="AutomationShell48.UI.Views.Tools.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Viewer"
        Width="860"
        Height="540"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Current Day Log Tail" Style="{StaticResource H2TextStyle}" />
                <TextBlock Text="Up to the latest 300 lines from today's rolling log file." Style="{StaticResource CaptionTextStyle}" />
            </StackPanel>

            <Button Grid.Column="1"
                    Width="100"
                    Height="34"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Content="Refresh"
                    Command="{Binding RefreshCommand}" />
        </Grid>

        <Border Grid.Row="2" Style="{StaticResource CardSurfaceStyle}" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding LogText}" FontFamily="Consolas" FontSize="12" TextWrapping="NoWrap" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>

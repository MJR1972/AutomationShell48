<UserControl x:Class="AutomationShell48.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Dashboard" Style="{StaticResource H1TextStyle}" />

        <Border Grid.Row="2" Style="{StaticResource CardSurfaceStyle}">
            <StackPanel>
                <TextBlock Text="Overview" Style="{StaticResource H3TextStyle}" />
                <TextBlock Margin="0,10,0,0" Text="{Binding SummaryText}" Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap" />
                <TextBlock Margin="0,12,0,0"
                           Style="{StaticResource CaptionTextStyle}"
                           Text="Reusable shell capabilities are active: navigation, dialogs, themes, status bar, and tool windows." />
            </StackPanel>
        </Border>

        <Border Background="#66000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="240" Height="10" />
                <TextBlock Margin="0,10,0,0" Text="{Binding BusyMessage}" Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="AutomationShell48.UI.Dialogs.MessageDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="460">
    <Border Style="{StaticResource CardSurfaceStyle}" Padding="20" Width="460">
        <StackPanel>
            <TextBlock Text="{Binding Title}" Style="{StaticResource H2TextStyle}" />
            <TextBlock Margin="0,12,0,18" Text="{Binding Message}" TextWrapping="Wrap" Style="{StaticResource BodyTextStyle}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource PrimaryButtonStyle}" Width="96" Content="OK" Command="{Binding OkCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>


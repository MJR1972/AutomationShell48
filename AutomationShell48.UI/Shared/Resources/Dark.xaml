<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor">#FF0E1628</Color>
    <Color x:Key="SurfaceColor">#FF111C33</Color>
    <Color x:Key="SurfaceAltColor">#FF16223D</Color>
    <Color x:Key="TextPrimaryColor">#FFE6EDF8</Color>
    <Color x:Key="TextSecondaryColor">#FF97A8C2</Color>
    <Color x:Key="BorderColor">#FF253754</Color>
    <Color x:Key="AccentColor">#FF1473E6</Color>
    <Color x:Key="AccentHoverColor">#FF0E65CE</Color>
    <Color x:Key="IconColor">#FFD6DEEB</Color>
    <Color x:Key="DangerColor">#FFF04438</Color>

    <Color x:Key="NavHoverBackgroundColor">#1E1473E6</Color>
    <Color x:Key="NavPressedBackgroundColor">#2D1473E6</Color>
    <Color x:Key="NavSelectedBackgroundColor">#331473E6</Color>
    <Color x:Key="TitleBarButtonHoverColor">#20FFFFFF</Color>
    <Color x:Key="SurfaceTitleBarColor">#0F172A</Color>
    <Color x:Key="DividerTitleBarColor">#1F2937</Color>
    <Color x:Key="StatusSurfaceColor">#FF101A2F</Color>
    <Color x:Key="ShadowColor">#3A000000</Color>
    <Color x:Key="ValidationColor">#FFF26D65</Color>
    <Color x:Key="CodeBlockBackgroundColor">#FF16223D</Color>
    <Color x:Key="CodeBlockBorderColor">#FF253754</Color>
    <Color x:Key="SearchHighlightColor">#665A7D1B</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource SurfaceAltColor}" />
    <SolidColorBrush x:Key="StatusSurfaceBrush" Color="{StaticResource StatusSurfaceColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentBrushHover" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="IconBrush" Color="{StaticResource IconColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="NavHoverBackgroundBrush" Color="{StaticResource NavHoverBackgroundColor}" />
    <SolidColorBrush x:Key="NavPressedBackgroundBrush" Color="{StaticResource NavPressedBackgroundColor}" />
    <SolidColorBrush x:Key="NavSelectedBackgroundBrush" Color="{StaticResource NavSelectedBackgroundColor}" />
    <SolidColorBrush x:Key="TitleBarButtonHoverBrush" Color="{StaticResource TitleBarButtonHoverColor}" />
    <SolidColorBrush x:Key="SurfaceTitleBarBrush" Color="{StaticResource SurfaceTitleBarColor}" />
    <SolidColorBrush x:Key="DividerTitleBarBrush" Color="{StaticResource DividerTitleBarColor}" />
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}" />
    <SolidColorBrush x:Key="ValidationBrush" Color="{StaticResource ValidationColor}" />
    <SolidColorBrush x:Key="CodeBlockBackgroundBrush" Color="{StaticResource CodeBlockBackgroundColor}" />
    <SolidColorBrush x:Key="CodeBlockBorderBrush" Color="{StaticResource CodeBlockBorderColor}" />
    <SolidColorBrush x:Key="SearchHighlightBrush" Color="{StaticResource SearchHighlightColor}" />
</ResourceDictionary>

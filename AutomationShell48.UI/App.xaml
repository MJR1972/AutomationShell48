<Application x:Class="AutomationShell48.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:AutomationShell48.UI.Shared.Converters"
             xmlns:dashboard="clr-namespace:AutomationShell48.UI.Features.Dashboard"
             xmlns:projects="clr-namespace:AutomationShell48.UI.Features.Projects"
             xmlns:settings="clr-namespace:AutomationShell48.UI.Features.Settings"
             xmlns:about="clr-namespace:AutomationShell48.UI.Features.About"
             xmlns:coreDialogs="clr-namespace:AutomationShell48.Core.Dialogs;assembly=AutomationShell48.Core"
             xmlns:dialogViews="clr-namespace:AutomationShell48.UI.Dialogs">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Shared/Styles/Typography.xaml" />
                <ResourceDictionary Source="Shared/Styles/Controls.xaml" />
                <ResourceDictionary Source="Shared/Resources/Icons.xaml" />
                <ResourceDictionary Source="Shared/Resources/Light.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter" />
            <converters:IconKeyToGeometryConverter x:Key="IconKeyToGeometryConverter" />

            <DataTemplate DataType="{x:Type dashboard:DashboardViewModel}">
                <dashboard:DashboardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type projects:ProjectsViewModel}">
                <projects:ProjectsPageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type settings:SettingsPageViewModel}">
                <settings:SettingsPageView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type about:AboutViewModel}">
                <about:AboutPageView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type coreDialogs:MessageDialogViewModel}">
                <dialogViews:MessageDialogView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type coreDialogs:ConfirmDialogViewModel}">
                <dialogViews:ConfirmDialogView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

